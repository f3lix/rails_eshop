<%= provide(:title, "Home") %>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div class="row">
  <% @products.each do |p| %>
  <div class="span4">
  	<h5 class="list_title"><%= p.title %></h5>
  	<%= image_tag(p.image_url, class: 'list_image') %>
  	<!--<%= sanitize(p.description) %>-->
  	<p class="price"><b><%= number_to_currency(p.price) %><b></p>
  	<p><%= link_to 'View Details', p, class: 'btn' %></p>
  	<p><%= button_to 'Add to Cart', line_items_path(product_id: p), class: 'btn btn-success', remote: true %></p>
  </div>
  <% end %>
</div>