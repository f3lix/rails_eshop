<%= provide(:title, @product.title) %>

<p id="notice"><%= notice %></p>

<p>
  <b>Category:</b>
  <%= @category.title %>
</p>

<h3><%= @product.title %></h3>

<div class="well">
  <%= image_tag(@product.image_url) %>
</div>

<div class="well">
  <b>Price:</b>
  <%= number_to_currency(@product.price) %>
  <b>Stock:</b>
  <%= @product.stock %>
</div>

<%= button_to 'Add to Cart', line_items_path(product_id: @product.id), class: 'btn btn-success' %>

<div class="well">
  <b>Description:</b>
  <%= raw @product.description %>
</div>

<% if signed_in && @current_user.admin? %>
<%= link_to 'Edit', edit_product_path(@product), class: 'btn' %>
<%= link_to 'Back', products_path, class: 'btn' %>
<% end %>
