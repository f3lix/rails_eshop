<%= provide(:title, "Listing orders") %>

<table class="table table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type</th>
    <th>Status</th>
    <th>Create Time</th>
    <th>Action</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= order.status %></td>
    <td><%= order.created_at %></td>
    <td><%= link_to 'Show', order, class: 'btn btn-info' %>
    <%= link_to 'Edit', edit_order_path(order), class: 'btn btn-success' %>
    <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path %>

<p><%= will_paginate @orders %>
